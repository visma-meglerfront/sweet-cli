{
	"name": "adeptoas/sweet-cli",
	"type": "library",
	"description": "Framework for making easy CLI applications",
	"license": "proprietary",
	"require": {
		"php": ">=7.4",
		"corneltek/getoptionkit": "^2.6.1",
		"kevinlebrun/colors.php": "^1.0.3",
		"ext-mbstring": "*"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^2.5"
	},
	"suggest": {
		"ext-json": "To print more verbose information with -vv"
	},
	"autoload": {
		"psr-4": {
			"Adepto\\SweetCLI\\": "src"
		}
	},
	"authors": [
		{
			"name": "Benjamin Schmidt",
			"email": "bs@adepto.as",
			"homepage": "https://bluefirex.de"
		}
	],
	"scripts": {
		"test": [
			"@phpcs"
		],
		"phpcs": "php vendor/bin/phpcs"
	}
}
